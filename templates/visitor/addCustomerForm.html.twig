{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="text-center">{{ action }} {{ object }}</h1>
    <div style="border: 1px white solid; padding: 1rem">
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col">
                {{ form_row(form.lastName) }}
            </div>
        </div>
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        <button type="submit" class="btn btn-success">{{ action }}</button>
        {{ form_end(form) }}
    </div>

{% endblock %}